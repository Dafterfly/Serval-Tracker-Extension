{
    "manifest_version": 2,
    "name": "Serval Tracker Linker",
    "version": "2.0",
    "description": "Adds a link to Serval Tracker on Takealot product pages.",
    "author": "Eustacia Rajman",
    "homepage_url": "https://github.com/Dafterfly/Serval-Tracker-Extension",
    "content_scripts": [
        {
            "matches": ["*://*.takealot.com/*"],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "48": "serval_favicon_48x48.png"
    }
}
